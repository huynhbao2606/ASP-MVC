@model ASP_MVC.Models.CoverType

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@(Model.Id != 0 ? "Edit" : "Create")</h1>

<h4>CoverType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Upsert">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group py-2">
                <input type="submit" value="@(Model.Id != 0 ? "Update" : "Create")" class="btn btn-primary" />
                <a asp-controller="CoverType" asp-action="Index" class="btn btn-dark" style="width: 150px;">
                    Back To List
                </a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
