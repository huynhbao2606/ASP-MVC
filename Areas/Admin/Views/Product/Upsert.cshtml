@model ProductDTO


@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <input asp-for="Product.Id" type="hidden" />
    <input asp-for="Product.ImageUrl" type="hidden" />

    <div class="mt-4">
        <div class="row pb-2">
            <h2>@(Model.Product.Id != 0 ? "Edit" : "Create")</h2>
            <hr />
        </div>

        <div asp-validation-summary="All"></div>
        <div class="form-floating mb-3">
            <input asp-for="Product.Title" class="form-control" placeholder="name">
            <label asp-for="Product.Title"></label>
            <span asp-validation-for="Product.Title" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Product.Description" class="form-control" placeholder="name">
            <label asp-for="Product.Description"></label>
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Product.ISBN" class="form-control" placeholder="name">
            <label asp-for="Product.ISBN"></label>
            <span asp-validation-for="Product.ISBN" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Product.Author" class="form-control" placeholder="name">
            <label asp-for="Product.Author"></label>
            <span asp-validation-for="Product.Author" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Product.Price" class="form-control" placeholder="name">
            <label asp-for="Product.Price"></label>
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Product.Price50" class="form-control" placeholder="name">
            <label asp-for="Product.Price50"></label>
            <span asp-validation-for="Product.Price50" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Product.Price100" class="form-control" placeholder="name">
            <label asp-for="Product.Price100"></label>
            <span asp-validation-for="Product.Price100" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Product.ImageUrl" class="form-label"></label>
            <input name="file" type="file" class="form-control" accept="image/*" />
        </div>

        <div class="form-floating mb-3">
            <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select"
                    aria-label="select Category">
                <option disabled selected>--Select Category--</option>
            </select>
            <label asp-for="Product.CategoryId">Category</label>
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
          <select class="form-select" 
                  id="coverTypeSelect" 
                  asp-for="Product.CoverTypeId"
                  asp-items="@Model.CoverTypeList" 
                  aria-label="Select cover type">
            <option disabled selected>--Select cover type--</option>
          </select>
          <label for="coverTypeSelect">Cover Type</label>
          <span asp-validation-for="Product.CoverTypeId" class="text-danger"></span>
        </div>


        

        <button type="submit" class="btn btn-primary" style="width:150px;">@(Model.Product.Id != 0 ? "Update" : "Create")</button>

        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width: 150px;">
            Back to List
        </a>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @*<partial name="_ValidationScriptsPartial" />*@
}

