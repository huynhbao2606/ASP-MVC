@model IEnumerable<ASP_MVC.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Description
            </th>
            <th>
                ISBN
            </th>
            <th>
                Author
            </th>
            <th>
                Price
            </th>
            <th>
                Price 50
            </th>
            <th>
                Price 100
            </th>
            <th>
                Image
            </th>
            <th>
                Category
            </th>
            <th>
                CoverType
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Title
            </td>
            <td>
                    @item.Description
            </td>
            <td>
                    @item.ISBN
            </td>
            <td>
                    @item.Author
            </td>
            <td>
                    @item.Price
            </td>
            <td>
                    @item.Price50
            </td>
            <td>
                    @item.Price100
            </td>
            <td>
                    @item.ImageUrl
            </td>
            <td>
                    @item.Category.Name
            </td>
            <td>
                    @item.CoverType.Name
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
